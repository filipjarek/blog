<div class="container mx-auto flex flex-wrap py-2">
	<section class="w-full md:w-2/3 flex flex-col items-center px-1">

		{% for post in posts %}

		<article class="flex flex-col py-2">

			{% if post.image %}

				<a href="{{ path('app_post', {'slug': post.slug}) }}">
					<img class="hover:opacity-75 object-cover h-96 w-full" src="{{ vich_uploader_asset(post, 'imageFile') }}" alt="{{ post.image }}">
				</a>

			{% endif %}

			<div class="bg-white flex flex-col justify-start p-6 shadow hover:shadow-xl shadow-gray-800/ border border-gray-300">
				<a href="{{ path('app_category', {'slug': post.category.slug}) }}" class="text-violet-600 hover:text-gray-900 text-sm font-bold uppercase pb-4 hover:underline">{{ post.category.name }}</a>
				<a href="{{ path('app_post', {'slug': post.slug}) }}" class="text-3xl font-bold hover:text-gray-700 hover:underline pb-4">{{ post.title }}</a>
				<p class="text-sm pb-3">
					Published on <i class="fa-solid fa-calendar-days"></i>
					<b>{{ post.createdAt|format_date('medium') }}</b>
				</p>
				<p class="pb-6 text-justify">{{ post.previewContent }}</p>
				<a href="{{ path('app_post', {'slug': post.slug}) }}" class="form-group group relative flex justify-center border-2 border-gray-400 hover:border-violet-800 text-gray-400 hover:text-violet-800 pt-1 pb-1 pl-6 pr-6 uppercase w-1/4 font-medium text-sm">
					Continue Reading
				</a>

				<div :class="open ? 'block': 'hidden'" class="w-full flex-grow sm:flex sm:items-center sm:w-auto">
					<div class="w-full container mx-auto flex flex-col sm:flex-row items-center justify-end text-sm font-bold uppercase mt-0 px-6 py-2">

				{% for tag in post.tags %}

					<a href="{{ path('app_tag', {'slug': tag.slug}) }}" class="text-gray-400 hover:text-white hover:bg-violet-800 text-xs font-medium mr-2 px-2.5 py-0.5 border-2 border-gray-400 hover:border-violet-800 mx-2">
						<i class="fa-solid fa-tag"></i>
							{{ tag.name }}
					</a>

				{% endfor %}

					</div>
				</div>
			</div>

		</article>

		{% else %}

		<div class="flex flex-col items-center py-8">
			<h2 class="text-sm mb-8 font-semibold uppercase">
				No posts
			</h2>
		</div>

		{% endfor %}	

		</section>

			{% include "components/_sidebar.html.twig" %}

		</div>

	<div class="w-full md:w-2/3 flex flex-col items-center px-1">
		{{ knp_pagination_render(posts) }}
	</div></div></div></div></div>
