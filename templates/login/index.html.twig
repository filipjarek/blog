{% extends 'layouts/body.html.twig' %}
{% block title %}
	Login
{% endblock %}

{% block body %}

	<body class="bg-gradient-to-r from-slate-900 to-cyan-900 h-full">
		<div class="flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
			<div class="w-full max-w-md space-y-8">
				<div>
					<h2 class="mt-6 text-center text-3xl font-bold tracking-tight uppercase text-white">Account Login</h2>
				</div>

				{% if error %}
					<div class="text-md flex justify-center text-red-500">
						{{ error.messageKey|trans(error.messageData, 'security') }}
					</div>
				{% endif %}

				<form class="space-y-6" action="{{ path('app_login') }}" method="post">

					<input class="bg-gray-800 border-2 border-slate-900 text-white text-md rounded-lg block w-full p-4" id="username" name="_username" placeholder="email@gmail.com" type="email" value="{{ last_username }}" required>

					<input class="bg-gray-800 border-2 border-slate-900 text-white text-md rounded-lg block w-full p-4" id="password" name="_password" placeholder="********" type="password" autocomplete="current-password" required>

					<button type="submit" class="group relative flex w-full justify-center rounded-lg border border-transparent bg-violet-700 py-4 px-4 text-sm font-bold text-white hover:bg-violet-800 focus:outline-none uppercase">
						Sign in
					</button>

					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

				</form>

			</div>
		</div>
	</body>
	
	{% include "components/_footer.html.twig" %}
	
{% endblock %}
