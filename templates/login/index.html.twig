{% extends 'layouts/body.html.twig' %}
{% block title %}
	Login
{% endblock %}

{% block body %}

	<div class="flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
		<div class="w-full max-w-md space-y-8">
			<div>
				<h2 class="mt-6 text-center text-3xl font-bold tracking-tight uppercase text-gray-600">
					Account Login
				</h2>
			</div>

			{% if error %}

				<div class="text-md flex justify-center text-red-500">
					{{ error.messageKey|trans(error.messageData, 'security') }}
				</div>

			{% endif %}

			<form class="space-y-6" action="{{ path('app_login') }}" method="post">
				<div class="relative mb-6">
					<div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
						<span class="flex items-center px-3 text-gray-400">
							<i class="fa-solid fa-user"></i>
						</span>
					</div>
					<input class="bg-gray-800 pl-12 border border-gray-500 focus:ring focus:ring-gray-500 text-gray-400 text-md w-full focus:outline-none p-4" id="username" name="_username" placeholder="email@gmail.com" type="email" value="{{ last_username }}" required>
				</div>
				<div class="relative mb-6">
					<div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
						<span class="flex items-center px-3 text-gray-400">
							<i class="fas fa-lock"></i>
						</span>
					</div>
					<input class="bg-gray-800 pl-12 border border-gray-500 focus:ring focus:ring-gray-500 text-gray-400 text-md w-full focus:outline-none p-4" id="password" name="_password" placeholder="********" type="password" autocomplete="current-password" required>
				</div>
				<button type="submit" class="group relative flex w-full justify-center rounded-md py-4 px-4 text-md font-bold text-gray-400 hover:text-white hover:bg-violet-800 border-2 border-gray-400 hover:border-violet-800 focus:outline-none uppercase">
					Sign in
				</button>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
			</form>

		</div>
	</div>
</body>

{% include "components/_footer.html.twig" %}{% endblock %}
